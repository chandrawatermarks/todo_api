{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/todos": {
      "post": {
        "summary": "Creates a todo",
        "tags": [
          "Todos"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              },
              "required": [
                "title"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "todo created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      },
      "get": {
        "summary": "Retrives All Todos",
        "tags": [
          "Todos"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "todos retrived"
          }
        }
      }
    },
    "/api/v1/todos/{id}": {
      "patch": {
        "summary": "Update a todo",
        "tags": [
          "Todos"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "todo",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              },
              "required": [
                "title"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "todo updated"
          },
          "422": {
            "description": "invalid request"
          }
        }
      },
      "get": {
        "summary": "Retrieves a todo",
        "tags": [
          "Todos"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Todo retrived",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "todo not found"
          }
        }
      },
      "delete": {
        "summary": "Removes a todo",
        "tags": [
          "Todos"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Todo deleted"
          },
          "404": {
            "description": "todo not found"
          }
        }
      }
    },
    "/api/v1/todos/{id}/recover": {
      "get": {
        "summary": "Recovers a todo",
        "tags": [
          "Todos"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Todo retrived",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "todo not found"
          }
        }
      }
    },
    "/api/v1/todos/{id}/add_tags": {
      "put": {
        "summary": "Add Tag to a todo",
        "tags": [
          "Todos"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "tag",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "tag_name": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "404": {
            "description": "todo not found"
          }
        }
      }
    }
  }
}